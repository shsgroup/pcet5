ARCH = intel_2011_sp1-x86_64
FC = /opt/intel/composer_xe_2011_sp1.7.256/bin/intel64/ifort
# Important: MODFLAG must have a trailing blank
MODFLAG = -module 
BACKSLASH = -assume nobscc
NOBACKSLASH = -assume bscc
F90FLAGS = -fast -ftz -zero
F77FLAGS = -O2 -ftz -zero

# sequential mkl libraries
LDFLAGS = -L/opt/intel/composerxe/mkl/lib/intel64 -lmkl_intel_lp64 -lmkl_core -lmkl_sequential -lpthread -lm

# parallel (threaded) mkl libraries
# set OMP_NUM_THREADS=<number_of_threads> in your script (default is 8 threads)
#LDFLAGS = -L/opt/intel/composerxe/mkl/lib/intel64 -lmkl_intel_lp64 -lmkl_intel_thread -lmkl_core -liomp5 -lpthread -lm


